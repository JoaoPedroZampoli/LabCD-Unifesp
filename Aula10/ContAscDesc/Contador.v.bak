module Contador (
    input clock,
    input reset,
	 input modo,
    output reg [3:0] q
);
    always @(posedge clock) begin
        if (reset) begin
            q <= 4'b0000;     // Reset síncrono
        end else begin
            if (q == 4'd9)
                q <= 4'b0000; // Reiniciando após o 9
            else
                q <= q + 1'b1;
        end
    end
endmodule